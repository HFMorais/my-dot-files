#
# wm independent hotkeys
#
# terminal emulator
super + Return
	alacritty || kitty

# program launcher
super + @space
	rofi -show drun

# program selector
super + shift + @space
	rofi -show window

# Lock screen
super + l
	betterlockscreen -l blur

# Browser
super + b
	firefox || brave || vivaldi || thorium-browser

# Private Browser
super + shift + b
	firefox --private-window || brave --incognito || vivaldi  --incognito || thorium-browser --incognito 

# Thunar
super + d
	nemo

# NordVPN
super + shift + n
    ~/.scripts/nordvpn-toggle.sh

# Youtube Video
super + y
    lryp

# Youtube HD Video
super + shift + y
    lryp -q 1080

# Create Sticky floating window
super + ctrl + y
    ~/.scripts/stick-floating-window.sh

# Unstick and unfloat a window
super + alt + y
    ~/.scripts/unstick-floating-window.sh

# Quick suspend
super + alt + Escape
	systemctl suspend

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Reload polybar
super + ctrl + Escape
	bash ~/.config/polybar/launch.sh &

# Call powermenu
super + shift + q
	bash ~/.config/rofi/powermenu/powermenu.sh

#
# bspwm hotkeys
#
# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# Close window with special upper mouse button
button9
	xdotool key Control_L+w

# Close App with special bottom mouse button
button8
	bspc node -c

#############################
# Control keys
#############################
XF86MonBrightness{Up,Down}  
	brightnessctl s 30{+,-}

XF86Audio{Raise,Lower}Volume  
	pulsemixer --change-volume {+,-}10  
 
XF86AudioMute  
	pulsemixer  --toggle-mute

#
# state/flags
#
# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


#
# focus/swap
#
# focus the node or move in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the last node
alt + Tab
	bspc node -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


#
# preselect
#
# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel


#
# move/resize
#
# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

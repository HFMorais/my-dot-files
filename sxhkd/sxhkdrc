#
# wm independent hotkeys
#
# terminal emulator
super + Return
	kitty

# program launcher
super + @space
	rofi -show drun

# program selector
super + shift + @space
	rofi -show window

# Lock screen
super + l
	bash ~/.scripts/lock-screen.sh

# Browser
super + b
	thorium-browser

# Private Browser
super + shift + b
	thorium-browser --incognito

# Thunar
super + d
	nemo

# NordVPN
super + shift + n
    ~/.scripts/nordvpn-toggle.sh

# Youtube Video
super + y
    lryp

# Youtube HD Video
super + alt + y
    lryp -q 1080

# Create Sticky floating window
super + shift + y
    ~/.scripts/stick-floating-window.sh

# Unstick and unfloat a window
super + ctrl + y
    ~/.scripts/unstick-floating-window.sh

# Quick suspend
super + alt + Escape
	systemctl suspend

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Reload polybar
super + ctrl + Escape
	bash ~/.config/polybar/launch.sh &

# Screenshots
Print
    flameshot launcher

Print + alt
    flameshot screen

Print + ctrl
    flameshot full

# Call powermenu
super + shift + q
	bash ~/.config/rofi/powermenu/powermenu.sh

#
# bspwm hotkeys
#
# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# Close window with special upper mouse button
button9
	xdotool key Control_L+w

# Close App with special bottom mouse button
button8
	bspc node -c

# This is to bypass my shitty keyboard F / media key handling most users won't need this
# F1
XF86MonBrightnessDown
	/bin/bash -c "sleep 0.1 && xdotool key F1"
# F2
XF86MonBrightnessUp
	/bin/bash -c "sleep 0.1 && xdotool key F2"
# F3
XF86LaunchA
	/bin/bash -c "sleep 0.1 && xdotool key F3"
# F4
XF86LaunchB
	/bin/bash -c "sleep 0.1 && xdotool key F4"
# F5
XF86KbdBrightnessDown
	/bin/bash -c "sleep 0.1 && xdotool key F5"
# F6
XF86KbdBrightnessUp
	/bin/bash -c "sleep 0.1 && xdotool key F6"
# F7
XF86AudioPrev
	/bin/bash -c "sleep 0.1 && xdotool key F7"
# F8
XF86AudioPlay
	/bin/bash -c "sleep 0.1 && xdotool key F8"
# F9
XF86AudioNext
	/bin/bash -c "sleep 0.1 && xdotool key F9"
# F10
XF86AudioMute
	/bin/bash -c "sleep 0.1 && xdotool key F10"
# F11
XF86AudioLowerVolume
	/bin/bash -c "sleep 0.1 && xdotool key F11"
# F12
XF86AudioRaiseVolume
	/bin/bash -c "sleep 0.1 && xdotool key F12"

#
# state/flags
#
# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


#
# focus/swap
#
# focus the node or move in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the last node
alt + Tab
	bspc node -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


#
# preselect
#
# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel


#
# move/resize
#
# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
